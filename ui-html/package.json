{
  "scripts": {
    "clean": "rimraf _site",
    "watch": "tailwindcss -i ./src/o_0.css -o ./src/0_o.css --watch",
    "css": "tailwindcss -i ./src/o_0.css -o ./src/0_o.css --minify --watch",
    "eleventy": "npx eleventy --input=src --output=dist --formats=html,css",
    "dev:tailwind": "npx tailwindcss -i src/css/style.css -o _site/o_0.css --watch",
    "build:tailwind": "npx tailwindcss -i src/css/style.css -o _site/o_0.css --minify",
    "dev:eleventy": "npx @11ty/eleventy --serve",
    "build:eleventy": "npx @11ty/eleventy",
    "dev": "npm-run-all clean --parallel dev:*",
    "build": "npm-run-all clean build:eleventy build:tailwind"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "html-minifier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.13"
  },
  "volta": {
    "node": "22.11.0"
  }
}
